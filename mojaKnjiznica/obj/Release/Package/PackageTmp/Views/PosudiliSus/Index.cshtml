@model IEnumerable<mojaKnjiznica.Models.PosudiliSu>

@{
    ViewBag.Title = "Popis posuđenih knjiga";
}

<h2>Popis posuđenih knjiga</h2>

<p>
    @Html.ActionLink("Kreiraj novi zapis", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Knjiga.Naslov)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posidjivac.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumPosudbe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Knjiga.Naslov)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Posidjivac.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatumPosudbe)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
